# ===========================================
# BioWings Docker Environment Configuration
# ===========================================
# Copy this file to .env and fill in your values
# DO NOT commit .env to source control!

# =========================================
# Database Configuration
# =========================================
MYSQL_ROOT_PASSWORD=your_secure_root_password
MYSQL_DATABASE=db_biowings
MYSQL_USER=user
MYSQL_PASSWORD=your_secure_password
DB_PORT=3307

# =========================================
# Redis Configuration
# =========================================
REDIS_PORT=6379

# =========================================
# Nominatim Configuration (Geocoding)
# =========================================
NOMINATIM_PORT=8081
NOMINATIM_PBF_URL=https://download.geofabrik.de/europe/turkey-latest.osm.pbf
NOMINATIM_REPLICATION_URL=https://download.geofabrik.de/europe/turkey-updates
NOMINATIM_PASSWORD=your_nominatim_password

# =========================================
# WebAPI Configuration
# =========================================
WEBAPI_HTTP_PORT=7128
WEBAPI_HTTPS_PORT=7129
ASPNETCORE_ENVIRONMENT=Development
FRONTEND_URL=http://localhost:5000

# =========================================
# UI Configuration
# =========================================
UI_HTTP_PORT=5000
UI_HTTPS_PORT=5001
API_BASE_URL=http://biowings-webapi:8080/api
FRONTEND_API_URL=http://localhost:7128/api
NOMINATIM_BASE_URL=http://biowings-nominatim:8080

# =========================================
# JWT Configuration
# =========================================
JWT_ISSUER=http://localhost:7128
JWT_AUDIENCE=http://localhost:5000
JWT_SECRET_KEY=your_very_secure_jwt_secret_key_at_least_32_chars

# =========================================
# Email Configuration (Production SMTP)
# =========================================
# For Gmail: Enable "Less secure app access" or use App Password
EMAIL_SMTP_SERVER=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USERNAME=your_email@gmail.com
EMAIL_PASSWORD=your_app_password
EMAIL_SENDER_EMAIL=your_email@gmail.com
EMAIL_SENDER_NAME=BIOWINGS

# =========================================
# Encryption Configuration
# =========================================
# Generate with: Convert.ToBase64String(RandomNumberGenerator.GetBytes(32))
ENCRYPTION_KEY=your_base64_encoded_32_byte_key
# Generate with: Convert.ToBase64String(RandomNumberGenerator.GetBytes(16))
ENCRYPTION_IV=your_base64_encoded_16_byte_iv

# =========================================
# JWT Token Expiration
# =========================================
JWT_ACCESS_TOKEN_EXPIRATION=60
JWT_REFRESH_TOKEN_EXPIRATION=60

# =========================================
# MailHog Configuration (Development Email)
# =========================================
MAILHOG_SMTP_PORT=1025
MAILHOG_UI_PORT=8025
