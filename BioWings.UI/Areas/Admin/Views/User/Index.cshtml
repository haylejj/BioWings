@model UserViewModel
@{
    ViewData["Title"] = "Kullanıcılar";
    Layout = "~/Areas/Admin/Views/AdminMainLayout/Index.cshtml";
}

<div class="card">
    <div class="card-header border-0 pt-6">
        <div class="card-title">
        </div>
        <div class="card-toolbar">
            <div class="d-flex justify-content-end" data-kt-user-table-toolbar="base">
                <!-- Özel arama kutusu -->
                <div class="input-group me-2" style="width: 250px;">
                    <span class="input-group-text">
                        <i class="fas fa-search"></i>
                    </span>
                    <input type="text" id="customSearch" class="form-control" placeholder="Kullanıcı ara...">
                </div>

                <!-- Mevcut Yeni Kullanıcı Ekle butonu -->
                <button type="button" class="btn btn-light-dark" onclick="openCreateUserModal()">
                    <span class="svg-icon svg-icon-2">
                        <svg width="24" height="24" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
                            <rect opacity="0.5" x="11.364" y="20.364" width="16" height="2" rx="1" transform="rotate(-90 11.364 20.364)" fill="currentColor"></rect>
                            <rect x="4.36396" y="11.364" width="16" height="2" rx="1" fill="currentColor"></rect>
                        </svg>
                    </span>
                    Yeni Kullanıcı Ekle
                </button>
            </div>
        </div>
    </div>
    <div class="card-body py-4">
        @if (ViewData.ContainsKey("ErrorMessage"))
        {
            <div class="alert alert-danger">
                @ViewData["ErrorMessage"]
            </div>
        }
        <table class="table align-middle table-row-dashed fs-6 gy-5" id="kt_datatable">
            <thead>
                <tr class="text-start text-muted fw-bold fs-7 text-uppercase gs-0">
                    <th>ID</th>
                    <th>Ad</th>
                    <th>Soyad</th>
                    <th>Tam Ad</th>
                    <th>E-posta</th>
                    <th>E-posta Doğrulaması</th>
                    <th>Ülke</th>
                    <th>Oluşturulma Tarihi</th>
                    <th>Güncellenme Tarihi</th>
                    <th>İşlemler</th>
                </tr>
            </thead>
            <tbody class="text-gray-600 fw-semibold">
                @if (Model?.GetViewModels != null)
                {
                    foreach (var user in Model.GetViewModels)
                    {
                        <tr>
                            <td>@user.Id</td>
                            <td>@user.FirstName</td>
                            <td>@user.LastName</td>
                            <td>@user.FullName</td>
                            <td>@user.Email</td>
                            <td>
                                @if (user.IsEmailConfirmed)
                                {
                                    <div class="badge badge-success fw-bold">Doğrulanmış</div>
                                }
                                else
                                {
                                    <div class="badge badge-warning fw-bold">Doğrulanmamış</div>
                                }
                            </td>
                            <td>@user.CountryName</td>
                            <td>@user.CreatedTime.ToString("dd.MM.yyyy HH:mm")</td>
                            <td>@user.UpdatedTime.ToString("dd.MM.yyyy HH:mm")</td>
                            <td>
                                <div class="d-flex justify-content-end flex-shrink-0">
                                   <a href="javascript:void(0);"
                                       onclick="populateUpdateModal('@user.Id')"
                                       class="btn btn-icon btn-bg-light btn-active-color-primary btn-sm me-1" 
                                       data-bs-toggle="tooltip" 
                                       data-bs-placement="top" 
                                       title="Düzenle">
                                        <span class="svg-icon svg-icon-3">
                                            <svg width="24" height="24" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
                                                <path opacity="0.3" d="M21.4 8.35303L19.241 10.511L13.485 4.755L15.643 2.59595C16.0248 2.21423 16.5426 1.99988 17.0825 1.99988C17.6224 1.99988 18.1402 2.21423 18.522 2.59595L21.4 5.474C21.7817 5.85581 21.9962 6.37355 21.9962 6.91345C21.9962 7.45335 21.7817 7.97122 21.4 8.35303ZM3.68699 21.932L9.88699 19.865L4.13099 14.109L2.06399 20.309C1.98815 20.5354 1.97703 20.7787 2.03189 21.0111C2.08674 21.2436 2.2054 21.4561 2.37449 21.6248C2.54359 21.7934 2.75641 21.9115 2.989 21.9658C3.22158 22.0201 3.4647 22.0084 3.69099 21.932H3.68699Z" fill="currentColor"></path>
                                                <path d="M5.574 21.3L3.692 21.928C3.46591 22.0032 3.22334 22.0141 2.99144 21.9594C2.75954 21.9046 2.54744 21.7864 2.3789 21.6179C2.21036 21.4495 2.09202 21.2375 2.03711 21.0056C1.9822 20.7737 1.99289 20.5312 2.06799 20.3051L2.696 18.422L5.574 21.3ZM4.13499 14.105L9.891 19.861L19.245 10.507L13.489 4.75098L4.13499 14.105Z" fill="currentColor"></path>
                                            </svg>
                                        </span>
                                    </a>
                                    <a href="javascript:void(0);"
                                       onclick="deleteUser('@user.Id')"
                                       class="btn btn-icon btn-bg-light btn-active-color-danger btn-sm"
                                       data-bs-toggle="tooltip"
                                       data-bs-placement="top"
                                       title="Sil">
                                        <span class="svg-icon svg-icon-3">
                                            <svg width="24" height="24" viewBox="0 0 24 24"
                                                 fill="none" xmlns="http://www.w3.org/2000/svg">
                                                <path d="M5 9C5 8.44772 5.44772 8 6 8H18C18.5523 8 19 8.44772 19 9V18C19 19.6569 17.6569 21 16 21H8C6.34315 21 5 19.6569 5 18V9Z"
                                                      fill="currentColor"></path>
                                                <path opacity="0.5"
                                                      d="M5 5C5 4.44772 5.44772 4 6 4H18C18.5523 4 19 4.44772 19 5V5C19 5.55228 18.5523 6 18 6H6C5.44772 6 5 5.55228 5 5V5Z"
                                                      fill="currentColor"></path>
                                                <path opacity="0.5"
                                                      d="M9 4C9 3.44772 9.44772 3 10 3H14C14.5523 3 15 3.44772 15 4V4H9V4Z"
                                                      fill="currentColor"></path>
                                            </svg>
                                        </span>
                                    </a>
                                    <a href="javascript:void(0);"
                                       onclick="updateRole(@user.Id)"
                                       class="btn btn-icon btn-bg-light btn-active-color-info btn-sm ms-1"
                                       data-bs-toggle="tooltip"
                                       data-bs-placement="top"
                                       title="Roller">
                                        <span class="svg-icon svg-icon-3">
                                            <svg width="24" height="24" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
                                                <path d="M17.5 11H6.5C4 11 2 9 2 6.5C2 4 4 2 6.5 2H17.5C20 2 22 4 22 6.5C22 9 20 11 17.5 11ZM15 6.5C15 7.9 16.1 9 17.5 9C18.9 9 20 7.9 20 6.5C20 5.1 18.9 4 17.5 4C16.1 4 15 5.1 15 6.5Z" fill="currentColor" />
                                                <path opacity="0.3" d="M17.5 22H6.5C4 22 2 20 2 17.5C2 15 4 13 6.5 13H17.5C20 13 22 15 22 17.5C22 20 20 22 17.5 22ZM4 17.5C4 18.9 5.1 20 6.5 20C7.9 20 9 18.9 9 17.5C9 16.1 7.9 15 6.5 15C5.1 15 4 16.1 4 17.5Z" fill="currentColor" />
                                            </svg>
                                        </span>
                                    </a>
                                </div>
                            </td>
                        </tr>
                    }
                }
                else
                {
                    <tr>

                        <td colspan="10" class="text-center">Kayıtlı hiç kullanıcı bulunamadı.</td>

                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
<div class="modal fade" id="kt_modal_update_user" tabindex="-1" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">  
            <div class="modal-header">
                <h5 class="modal-title">Kullanıcı Güncelleme</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <form id="updateUserForm" asp-area="Admin" asp-action="Update" asp-controller="User" method="post">
                    <input type="hidden" asp-for="UpdateViewModel.Id" id="updateUserId" />

                    <div class="mb-3">
                        <label for="updateUserFirstName" class="form-label">Ad</label>
                        <input type="text"
                               id="updateUserFirstName"
                               asp-for="UpdateViewModel.FirstName"
                               class="form-control form-control-solid"
                               placeholder="İsmi güncelleyiniz..."
                               required />
                    </div>

                    <div class="mb-3">
                        <label for="updateUserLastName" class="form-label">Soyad</label>
                        <input type="text"
                               id="updateUserLastName"
                               asp-for="UpdateViewModel.LastName"
                               class="form-control form-control-solid"
                               placeholder="Soyadı güncelleyiniz..."
                               required />
                    </div>

                    <div class="mb-3">
                        <label for="updateUserEmail" class="form-label">E-posta</label>
                        <input type="email"
                               id="updateUserEmail"
                               asp-for="UpdateViewModel.Email"
                               class="form-control form-control-solid"
                               placeholder="E-posta adresini güncelleyiniz..."
                               required />
                    </div>

                    <div class="mb-3">
                        <label for="updateUserCountry" class="form-label">Ülke</label>
                        <select id="updateUserCountry"
                                asp-for="UpdateViewModel.CountryId"
                                class="form-select form-control-solid"
                                required>
                            <option value="">Ülke seçiniz</option>
                            @if (ViewBag.Countries != null)
                            {
                                foreach (var country in ViewBag.Countries)
                                {
                                    <option value="@country.Id">@country.Name</option>
                                }
                            }
                        </select>
                    </div>

                    <div class="mb-3">
                        <div class="form-check">
                            <input type="checkbox"
                                   id="updateUserEmailConfirmed"
                                   asp-for="UpdateViewModel.IsEmailConfirmed"
                                   class="form-check-input" />
                            <label for="updateUserEmailConfirmed" class="form-check-label">
                                E-posta Onayı
                            </label>
                        </div>
                    </div>

                    <div class="modal-footer">
                        <button type="button" class="btn btn-light" data-bs-dismiss="modal">İptal</button>
                        <button type="submit" class="btn btn-primary">Kaydet</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

<!-- Kullanıcı Ekleme Modal -->
