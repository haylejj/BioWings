                    New Species
                </button>
            </div>
        </div>
    </div>
        <!--end::Card toolbar-->
    <!--begin::Card body-->
    <div class="card-body py-4">
        <!--begin::Table-->
        <table class="table align-middle table-row-dashed fs-6 gy-5" id="speciesTable">
            <thead>
                <tr class="text-start text-gray-400 fw-bold fs-7 text-uppercase gs-0">
                    <th>Id</th>
                    <th>Species Name</th>
                    <th>Scientific Name</th>
                    <th>Turkish Name</th>
                    <th>Hesselbart Name</th>
                    <th>Genus Name</th>
                    <th>Kocak Name</th>
                    <th>Authority Name</th>
                    <th></th>
                </tr>
            </thead>
            <tbody class="text-gray-600 fw-semibold">
                @foreach (var item in Model.Items)
                {
                    <tr>
                        <td>@item.Id</td>
                        <td>@(item.Name ?? "-")</td>
                        <td>@(item.ScientificName ?? "-")</td>
                        <td>@(item.TurkishName ?? "-")</td>
                        <td>@(item.HesselbarthName ?? "-")</td>
                        <td>@(item.GenusName ?? "-")</td>
                        <td>@(item.KocakName ?? "-")</td>
                        <td>@(item.AuthorityName ?? "-")</td>
                        <td>
                            <div class="d-flex justify-content-center">
                                <a href="javascript:;"
                                   data-species='@Html.Raw(Json.Serialize(item))'
                                   class="btn btn-icon btn-bg-light btn-active-color-primary btn-sm me-2 view-details">
                                    <i class="fas fa-eye"></i>
                                </a>
                                <a href="javascript:;" onclick="updateSpecies(@item.Id)"
                                   class="btn btn-icon btn-bg-light btn-active-color-primary btn-sm me-2">
                                    <i class="fas fa-edit text-primary"></i>
                                </a>
                                <a href="javascript:;" onclick="confirmDelete(@item.Id)"
                                   class="btn btn-icon btn-bg-light btn-active-color-danger btn-sm">
                                    <i class="fas fa-trash text-danger"></i>
                                </a>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
        <!--end::Table-->
        <!--begin::Pagination-->
        <div class="d-flex flex-stack flex-wrap pt-10">
            <div class="fs-6 fw-semibold text-gray-700">
                Showing @((Model.PageNumber - 1) * 25 + 1) to @Math.Min(Model.PageNumber * 25, Model.TotalCount) of @Model.TotalCount entries
            </div>
            <ul class="pagination">
                @{
                    var maxVisiblePages = 5;
                    var currentPage = Model.PageNumber;
                    var totalPages = Model.TotalPages;
                    var halfVisible = (maxVisiblePages - 1) / 2;
                    var startPage = Math.Max(1, currentPage - halfVisible);
                    var endPage = Math.Min(totalPages, startPage + maxVisiblePages - 1);
                    if (endPage - startPage + 1 < maxVisiblePages)
                    {
                        startPage = Math.Max(1, endPage - maxVisiblePages + 1);
                    }
                }

                <li class="page-item previous @(!Model.HasPreviousPage ? "disabled" : "")">
                    @if (Model.HasPreviousPage)
                    {
                        <a href="javascript:;" onclick="loadPage(@(Model.PageNumber - 1))" class="page-link">
                            <i class="previous"></i>
                        </a>
                    }
                    else
                    {
                        <span class="page-link"><i class="previous"></i></span>
                    }
                </li>

                @if (startPage > 1)
                {
                    <li class="page-item">
                        <a href="javascript:;" onclick="loadPage(1)" class="page-link">1</a>
                    </li>
                    @if (startPage > 2)
                    {
                        <li class="page-item disabled">
                            <span class="page-link">...</span>
                        </li>
                    }
                }

                @for (var i = startPage; i <= endPage; i++)
                {
                    <li class="page-item @(i == currentPage ? "active" : "")">
                        <a href="javascript:;" onclick="loadPage(@i)" class="page-link">@i</a>
                    </li>
                }

                @if (endPage < totalPages)
                {
                    @if (endPage < totalPages - 1)
                    {
                        <li class="page-item disabled">
                            <span class="page-link">...</span>
                        </li>
                    }
                    <li class="page-item">
                        <a href="javascript:;" onclick="loadPage(@totalPages)" class="page-link">@totalPages</a>
                    </li>
                }

                <li class="page-item next @(!Model.HasNextPage ? "disabled" : "")">
                    @if (Model.HasNextPage)
                    {
                        <a href="javascript:;" onclick="loadPage(@(Model.PageNumber + 1))" class="page-link">
                            <i class="next"></i>
                        </a>
                    }
                    else
                    {
                        <span class="page-link"><i class="next"></i></span>
                    }
                </li>
            </ul>
        </div>
    </div>
</div>
