            </div>
            <!--end::Search-->
        </div>
        <!--begin::Card toolbar-->
        <div class="card-toolbar">
            <div class="d-flex justify-content-end align-items-center">
                <!-- Bilgilendirme ve Template İndirme Butonu -->
                <div class="me-5 d-flex align-items-center">
                    <div class="d-flex flex-column">
                        <span class="text-dark fw-bold fs-7 mb-1">Lütfen Excel dosyanızın gerekli formatta olduğundan emin olun.</span>
                        <span class="text-muted fs-7">Gerekirse template'i indirin.</span>
                    </div>
                    <button type="button" class="btn btn-icon btn-bg-light btn-active-color-primary btn-sm ms-3" onclick="downloadTemplate()" data-bs-toggle="tooltip" title="Template İndir">
                        <span class="svg-icon svg-icon-3">
                            <svg width="24" height="24" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
                                <path d="M19 11H5C4.4 11 4 11.4 4 12C4 12.6 4.4 13 5 13H19C19.6 13 20 12.6 20 12C20 11.4 19.6 11 19 11Z" fill="currentColor" />
                                <path d="M12 4C11.4 4 11 4.4 11 5V19C11 19.6 11.4 20 12 20C12.6 20 13 19.6 13 19V5C13 4.4 12.6 4 12 4Z" fill="currentColor" />
                                <path d="M15 15L12 18L9 15" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" />
                            </svg>
                        </span>
                    </button>
                </div>

                <!-- Import Butonu -->
                <button type="button" class="btn btn-light-primary me-3" data-bs-toggle="modal" data-bs-target="#kt_import_modal">
                    <span class="svg-icon svg-icon-2">
                        <svg width="24" height="24" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
                            <path d="M12 22C17.5228 22 22 17.5228 22 12C22 6.47715 17.5228 2 12 2C6.47715 2 2 6.47715 2 12C2 17.5228 6.47715 22 12 22Z" stroke="currentColor" stroke-width="2" />
                            <path d="M12 16V8M12 8L15 11M12 8L9 11" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" />
                        </svg>
                    </span>
                    Import Data
                </button>

                <!-- New Species Butonu -->
