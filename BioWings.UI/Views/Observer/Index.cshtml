@model ApiPaginatedListResult<ObserverGetViewModel>
@{
    ViewData["Title"] = "Gözlemciler";
    Layout = "~/Views/MainLayout/Index.cshtml";
}

<!--begin::Card-->
<div class="card">
    <div class="card-header border-0 pt-6">
        <!--begin::Card title-->
        <div class="card-title">
            <!--begin::Search-->
            <div class="d-flex align-items-center position-relative my-1">
                <span class="svg-icon svg-icon-1 position-absolute ms-6">
                    <svg width="24" height="24" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
                        <rect opacity="0.5" x="17.0365" y="15.1223" width="8.15546" height="2" rx="1"
                            transform="rotate(45 17.0365 15.1223)" fill="currentColor"></rect>
                        <path
                            d="M11 19C6.55556 19 3 15.4444 3 11C3 6.55556 6.55556 3 11 3C15.4444 3 19 6.55556 19 11C19 15.4444 15.4444 19 11 19ZM11 5C7.53333 5 5 7.53333 5 11C5 14.4667 7.53333 17 11 17C14.4667 17 17 14.4667 17 11C17 7.53333 14.4667 5 11 5Z"
                            fill="currentColor"></path>
                    </svg>
                </span>
                <input type="text" id="searchInput" class="form-control form-control-solid w-250px ps-14"
                    placeholder="Gözlemci Ara">
            </div>
            <!--end::Search-->
        </div>
        <!--end::Card title-->
        <!--begin::Card toolbar-->
        <div class="card-toolbar">
            <!--begin::Toolbar-->
            <div class="d-flex justify-content-end">
                <button type="button" class="btn btn-light-dark">
                    <i class="ki-duotone ki-plus fs-2"></i>
                    Yeni Gözlemci
                </button>
            </div>
            <!--end::Toolbar-->
        </div>
        <!--end::Card toolbar-->
    </div>
    <!--begin::Card body-->
    <div class="card-body py-4">
        <!--begin::Table-->
        <table class="table align-middle table-row-dashed fs-6 gy-5" id="observersTable">
            <thead>
                <tr class="text-start text-gray-400 fw-bold fs-7 text-uppercase gs-0">
                    <th>Id</th>
                    <th>Ad</th>
                    <th>Soyad</th>
                    <th></th>
                </tr>
            </thead>
            <tbody class="text-gray-600 fw-semibold">
                @foreach (var item in Model.Items)
                {
                    <tr>
                        <td>@item.Id</td>
                        <td>@(item.FirstName ?? "-")</td>
                        <td>@(item.LastName ?? "-")</td>
                        <td>
                            <div class="d-flex justify-content-center">
                                <a href="/Observer/Observations/@item.Id"
                                    class="btn btn-icon btn-bg-light btn-active-color-primary btn-sm me-2 cursor-pointer"
                                    data-bs-toggle="tooltip" data-bs-placement="top" title="Gözlemleri Görüntüle">
                                    <i class="fas fa-binoculars text-primary"></i>
                                </a>
                                <a onclick="confirmDelete(@item.Id)"
                                    class="btn btn-icon btn-bg-light btn-active-color-danger btn-sm me-2 cursor-pointer"
                                    data-bs-toggle="tooltip" data-bs-placement="top" title="Sil">
                                    <i class="fas fa-trash text-danger"></i>
                                </a>
                                <a onclick="updateObserver(@item.Id)"
                                    class="btn btn-icon btn-bg-light btn-active-color-primary btn-sm cursor-pointer"
                                    data-bs-toggle="tooltip" data-bs-placement="top" title="Düzenle">
                                    <i class="fas fa-edit text-primary"></i>
                                </a>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
        <!--end::Table-->
        <!--begin::Pagination-->
        <div class="d-flex flex-stack flex-wrap pt-10">
            <div class="fs-6 fw-semibold text-gray-700">
                @{
                    var startEntry = (Model.PageNumber - 1) * 25 + 1;
                    var endEntry = Math.Min(Model.PageNumber * 25, Model.TotalCount);
                    if (Model.TotalCount == 0)
                    {
                        startEntry = 0;
                        endEntry = 0;
                    }
                }
                Showing @startEntry to @endEntry of @Model.TotalCount entries
            </div>
            <ul class="pagination">
                @{
                    var maxVisiblePages = Math.Min(5, Model.TotalPages);
                    var currentPage = Model.PageNumber;
                    var totalPages = Model.TotalPages;

                    var halfVisible = Math.Floor((maxVisiblePages - 1) / 2.0);
                    var startPage = Math.Max(1, currentPage - (int)halfVisible);
                    var endPage = Math.Min(totalPages, startPage + maxVisiblePages - 1);

                    if (endPage - startPage + 1 < maxVisiblePages)
                    {
                        startPage = Math.Max(1, endPage - maxVisiblePages + 1);
                    }
                }

                <!--begin::Previous-->
                <li class="page-item previous @(!Model.HasPreviousPage ? "disabled" : "")">
                    @if (Model.HasPreviousPage)
                    {
                        <a href="javascript:;" onclick="loadPage(@(Model.PageNumber - 1))" class="page-link">
                            <i class="previous"></i>
                        </a>
                    }
                    else
                    {
                        <span class="page-link"><i class="previous"></i></span>
                    }
                </li>

                @if (startPage > 1)
                {
                    <li class="page-item">
                        <a href="javascript:;" onclick="loadPage(1)" class="page-link">1</a>
                    </li>
                    @if (startPage > 2)
                    {
                        <li class="page-item disabled">
                            <span class="page-link">...</span>
                        </li>
                    }
                }

                @for (var i = startPage; i <= endPage; i++)
                {
                    <li class="page-item @(i == currentPage ? "active" : "")">
                        <a href="javascript:;" onclick="loadPage(@i)" class="page-link">@i</a>
                    </li>
                }

                @if (endPage < totalPages)
                {
                    @if (endPage < totalPages - 1)
                    {
                        <li class="page-item disabled">
                            <span class="page-link">...</span>
                        </li>
                    }
                    <li class="page-item">
                        <a href="javascript:;" onclick="loadPage(@totalPages)" class="page-link">@totalPages</a>
                    </li>
                }

                <!--begin::Next-->
                <li class="page-item next @(!Model.HasNextPage ? "disabled" : "")">
                    @if (Model.HasNextPage)
                    {
                        <a href="javascript:;" onclick="loadPage(@(Model.PageNumber + 1))" class="page-link">
                            <i class="next"></i>
                        </a>
                    }
                    else
                    {
                        <span class="page-link"><i class="next"></i></span>
                    }
                </li>
            </ul>
        </div>
        <!--end::Pagination-->
    </div>
    <!--end::Card body-->
</div>
<!--end::Card-->
@section Scripts {
    <script>
        // DataTable initialization
        var table = $('#observersTable').DataTable({
            "searching": false,
            "paging": false,
            "info": false,
            "ordering": true,
            "order": [[0, "asc"]]
        });

        // Search functionality
        $(document).ready(function () {
            var tooltipTriggerList = [].slice.call(document.querySelectorAll('[data-bs-toggle="tooltip"]'))
            var tooltipList = tooltipTriggerList.map(function (tooltipTriggerEl) {
                return new bootstrap.Tooltip(tooltipTriggerEl)
            });
            const searchInput = $('#searchInput');

            const debouncedSearch = debounce(function (value) {
                if (value.trim().length === 0) {
                    window.location.href = '/Observer/Index';
                } else {
                    const currentPageSize = new URLSearchParams(window.location.search).get('pageSize') || '@Model.PageSize';
                    window.location.href = `/Observer/Index?searchTerm=${encodeURIComponent(value.trim())}&pageNumber=1&pageSize=${currentPageSize}`;
                }
            }, 500);

            searchInput.off('keyup').on('keyup', function () {
                debouncedSearch(this.value);
            });

            const urlParams = new URLSearchParams(window.location.search);
            const searchTerm = urlParams.get('searchTerm');
            if (searchTerm) {
                searchInput.val(decodeURIComponent(searchTerm));
            }
        });

        function debounce(func, wait) {
            let timeout;
            return function executedFunction(...args) {
                const later = () => {
                    clearTimeout(timeout);
                    func(...args);
                };
                clearTimeout(timeout);
                timeout = setTimeout(later, wait);
            };
        }

        function loadPage(pageNumber) {
            const searchTerm = $('#searchInput').val().trim();
            const baseUrl = '/Observer/Index';
            const queryParams = new URLSearchParams(window.location.search);

            queryParams.set('pageNumber', pageNumber);

            const currentPageSize = queryParams.get('pageSize') || '@Model.PageSize';
            queryParams.set('pageSize', currentPageSize);

            if (searchTerm) {
                queryParams.set('searchTerm', searchTerm);
            } else {
                queryParams.delete('searchTerm');
            }

            window.location.href = `${baseUrl}?${queryParams.toString()}`;
        }

        function openObservations(id) {
            window.location.href = `/Observer/Observations/${id}`;
        }

        // Delete functionality
        function confirmDelete(id) {
            Swal.fire({
                title: 'Emin misiniz?',
                text: "Bu gözlemci kalıcı olarak silinecek!",
                icon: 'warning',
                showCancelButton: true,
                confirmButtonColor: '#3085d6',
                cancelButtonColor: '#d33',
                confirmButtonText: 'Evet, sil!',
                cancelButtonText: 'İptal'
            }).then((result) => {
                if (result.isConfirmed) {
                    $.ajax({
                        url: `${window.API_CONFIG.BASE_URL}/Observers/${id}`,
                        type: 'DELETE',
                        success: function (response) {
                            Swal.fire({
                                title: 'Silindi!',
                                text: 'Gözlemci başarıyla silindi.',
                                icon: 'success',
                                timer: 2000,
                                showConfirmButton: true
                            }).then(() => {
                                window.location.reload();
                            });
                        },
                        error: function (xhr, status, error) {
                            Swal.fire({
                                title: 'Hata!',
                                text: 'Silme işlemi sırasında bir hata oluştu.',
                                icon: 'error'
                            });
                        }
                    });
                }
            });
        }
    </script>
}