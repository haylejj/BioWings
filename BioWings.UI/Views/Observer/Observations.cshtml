        function getCoordinatePrecisionLevelText(level) {
            const precisionLevels = {
                0: "Tam/Hassas Koordinat",
                1: "UTM Koordinatı",
                2: "İlçe Koordinatı",
                3: "Kare Koordinatı",
                4: "İl Koordinatı"
            };

            return precisionLevels[level] || "Bilinmiyor";
        }

        
