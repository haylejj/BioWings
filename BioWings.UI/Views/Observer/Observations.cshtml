@section Scripts {
    <script>
        var detailsModal;
        var table;
        
        $(document).ready(function() {
            // Initialize modal
            detailsModal = new bootstrap.Modal(document.getElementById('kt_modal_observation'));
            
            // Initialize tooltips
            var tooltipTriggerList = [].slice.call(document.querySelectorAll('[data-bs-toggle="tooltip"]'))
            var tooltipList = tooltipTriggerList.map(function (tooltipTriggerEl) {
                return new bootstrap.Tooltip(tooltipTriggerEl)
            });

            // Initialize DataTable
            table = $('#observationsTable').DataTable({
                "searching": false,
                "paging": false,
                "info": false,
                "ordering": true,
                "order": [[5, "desc"]] // Tarihe göre sıralama
            });

            // Search functionality
            const searchInput = $('#searchInput');
            const debouncedSearch = debounce(function(value) {
                if (value.trim().length === 0) {
                    window.location.href = `/Observer/Observations/@ViewBag.ObserverId`;
                } else {
                    window.location.href = `/Observer/Observations/@ViewBag.ObserverId?searchTerm=${encodeURIComponent(value.trim())}`;
                }
            }, 500);

            searchInput.on('keyup', function() {
                debouncedSearch(this.value);
            });

            if ('@ViewBag.SearchTerm' != '') {
                searchInput.val('@ViewBag.SearchTerm');
            }
        });

        function debounce(func, wait) {
            let timeout;
            return function executedFunction(...args) {
                const later = () => {
                    clearTimeout(timeout);
                    func(...args);
                };
                clearTimeout(timeout);
                timeout = setTimeout(later, wait);
            };
        }

        function loadPage(pageNumber) {
            const searchTerm = $('#searchInput').val().trim();
            const baseUrl = `/Observer/Observations/@ViewBag.ObserverId`;
            const queryParams = new URLSearchParams(window.location.search);

            queryParams.set('pageNumber', pageNumber);
            if (searchTerm) {
                queryParams.set('searchTerm', searchTerm);
            }

            window.location.href = `${baseUrl}?${queryParams.toString()}`;
        }

        function showDetails(id) {
            $.ajax({
                url: `https://localhost:7128/api/Observations/${id}`,
                method: 'GET',
                success: function(response) {
                    if (response.isSuccess && response.data) {
                        const data = response.data;

                        // Classification Information
                        fillDetailField('modalScientificName', data.scientificName);
                        fillDetailField('modalFamilyName', data.familyName);
                        fillDetailField('modalGenusName', data.genusName);
                        fillDetailField('modalEuName', data.euName);
                        fillDetailField('modalFullName', data.fullName);
                        fillDetailField('modalTurkishName', data.turkishName);
                        fillDetailField('modalEnglishName', data.englishName);
                        fillDetailField('modalAuthority', `${data.authorityName || ''} ${data.authorityYear || ''}`);
                        fillDetailField('modalName', data.name);
                        fillDetailField('modalTurkishNamesTrakel', data.turkishNamesTrakel);
                        fillDetailField('modalTrakel', data.trakel);

                        fillDetailField('modalProvince', data.provinceName);

                        // Coordinates display
                        const coordinates = [];
                        if (data.squareLatitude) coordinates.push(`Square Latitude: ${data.squareLatitude}`);
                        if (data.squareLongitude) coordinates.push(`Square Longitude: ${data.squareLongitude}`);
                        if (data.latitude) coordinates.push(`Latitude: ${data.latitude}`);
                        if (data.longitude) coordinates.push(`Longitude: ${data.longitude}`);
                        if (data.decimalDegrees) coordinates.push(`Decimal Degrees: ${data.decimalDegrees}`);
                        if (data.degreesMinutesSeconds) coordinates.push(`DMS: ${data.degreesMinutesSeconds}`);
                        if (data.decimalMinutes) coordinates.push(`Decimal Minutes: ${data.decimalMinutes}`);
                        if (data.utmCoordinates) coordinates.push(`UTM: ${data.utmCoordinates}`);
                        if (data.mgrsCoordinates) coordinates.push(`MGRS: ${data.mgrsCoordinates}`);
                        fillDetailField('modalCoordinates', coordinates.join('<br>'));

                        // Location Details
                        fillDetailField('modalProvince', data.provinceName);
                        fillDetailField('modalSquareRef', data.squareRef);
                        fillDetailField('modalAltitude', `${data.altitude1} - ${data.altitude2}`);
                        fillDetailField('modalUtmReference', data.utmReference);
                        fillDetailField('modalLocationInfo', data.locationInfo);
                        fillDetailField('modalCoordinatePrecisionLevel', getCoordinatePrecisionLevelText(data.coordinatePrecisionLevel));

                        // Observation Details
                        fillDetailField('modalObserver', data.observerFullName);
                        fillDetailField('modalObservationDate', moment(data.observationDate).format('DD.MM.YYYY'));
                        fillDetailField('modalNumberSeen', data.numberSeen);
                        fillDetailField('modalSex', data.sex);
                        fillDetailField('modalLifeStage', data.lifeStage);
                        fillDetailField('modalNotes', data.notes);
                        fillDetailField('modalSource', data.source);

                        // Show modal
                        $('#kt_modal_observation').modal('show');
                    } else {
                        showError('Veri alınamadı', 'Gözlem detayları getirilirken bir hata oluştu.');
                    }
                },
                error: function(xhr, status, error) {
                    showError('Hata!', 'Sunucu ile iletişim kurulurken bir hata oluştu.');
                }
            });
        }

        // Yardımcı fonksiyonlar
        function fillDetailField(fieldId, value) {
            const element = document.getElementById(fieldId);
            if (element) {
                // Eğer değer HTML içeriyorsa innerHTML kullan, aksi halde textContent kullan
                if (typeof value === 'string' && value.includes('&lt;br&gt;')) {
                    element.innerHTML = value.replace(/&lt;br&gt;/g, '<br>') || '-';
                } else if (typeof value === 'string' && value.includes('<br>')) {
                    element.innerHTML = value || '-';
                } else {
                    element.textContent = value || '-';
                }
            }
        }

        function showError(title, message) {
            Swal.fire({
                title: title,
                text: message,
                icon: 'error',
                confirmButtonText: 'Tamam',
                confirmButtonColor: '#3085d6'
            });
        }

        function getCoordinatePrecisionLevelText(level) {
            const precisionLevels = {
                0: "Tam/Hassas Koordinat",
                1: "UTM Koordinatı",
                2: "İlçe Koordinatı",
                3: "Kare Koordinatı",
                4: "İl Koordinatı"
            };

            return precisionLevels[level] || "Bilinmiyor";
        }

        
</script>
}


