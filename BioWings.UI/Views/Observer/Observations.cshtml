@model ApiPaginatedListResult<ObserverGetObservationsViewModel>
@{
    ViewData["Title"] = "Gözlemler";
    Layout = "~/Views/MainLayout/Index.cshtml";
}

<div class="card">
    <div class="card-header border-0 pt-6">
        <div class="card-title">
            <div class="d-flex align-items-center position-relative my-1">
                <span class="svg-icon svg-icon-1 position-absolute ms-6">
                    <svg width="24" height="24" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
                        <rect opacity="0.5" x="17.0365" y="15.1223" width="8.15546" height="2" rx="1" transform="rotate(45 17.0365 15.1223)" fill="currentColor"></rect>
                        <path d="M11 19C6.55556 19 3 15.4444 3 11C3 6.55556 6.55556 3 11 3C15.4444 3 19 6.55556 19 11C19 15.4444 15.4444 19 11 19ZM11 5C7.53333 5 5 7.53333 5 11C5 14.4667 7.53333 17 11 17C14.4667 17 17 14.4667 17 11C17 7.53333 14.4667 5 11 5Z" fill="currentColor"></path>
                    </svg>
                </span>
                <input type="text" id="searchInput" class="form-control form-control-solid w-250px ps-14" placeholder="Gözlem Ara">
            </div>
        </div>
    </div>
    <div class="card-body py-4">
        <table class="table align-middle table-row-dashed fs-6 gy-5" id="observationsTable">
            <thead>
                <tr class="text-start text-gray-400 fw-bold fs-7 text-uppercase gs-0">
                    <th>Bilimsel Ad</th>
                    <th>Tür Adı</th>
                    <th>Cins</th>
                    <th>Familya</th>
                    <th>İl</th>
                    <th>Tarih</th>
                    <th>Sayı</th>
                    <th>Kaynak</th>
                    <th></th>
                </tr>
            </thead>
            <tbody class="text-gray-600 fw-semibold">
                @foreach (var item in Model.Items)
                {
                    <tr>
                        <td>@(item.ScientificName ?? "-")</td>
                        <td>@(item.SpeciesName ?? "-")</td>
                        <td>@item.GenusName</td>
                        <td>@item.FamilyName</td>
                        <td>@item.ProvinceName</td>
                        <td>@item.ObservationDate.ToString("dd.MM.yyyy")</td>
                        <td>@item.NumberSeen</td>
                        <td>@item.Source</td>
                        <td>
                            <button onclick="showDetails(@item.Id)" 
                                    class="btn btn-icon btn-bg-light btn-active-color-primary btn-sm"
                                    data-bs-toggle="tooltip"
                                    data-bs-placement="top"
                                    title="Detaylar">
                                <i class="fas fa-eye text-primary"></i>
                            </button>
                            <button onclick="showUpdateModal(@item.Id)"
                                    class="btn btn-icon btn-bg-light btn-active-color-warning btn-sm me-1"
                                    data-bs-toggle="tooltip"
                                    data-bs-placement="top"
                                    title="Düzenle">
                                <i class="fas fa-pen text-warning"></i>
                            </button>
                            <button onclick="showDeleteModal(@item.Id)"
                                    class="btn btn-icon btn-bg-light btn-active-color-danger btn-sm"
                                    data-bs-toggle="tooltip"
                                    data-bs-placement="top"
                                    title="Sil">
                                <i class="fas fa-trash text-danger"></i>
                            </button>
                        </td>
                    </tr>
                }
            </tbody>
        </table>

        <div class="d-flex flex-stack flex-wrap pt-10">
            <div class="fs-6 fw-semibold text-gray-700">
                Showing @((Model.PageNumber - 1) * Model.PageSize + 1) to @(Math.Min(Model.PageNumber * Model.PageSize, Model.TotalCount)) of @Model.TotalCount entries
            </div>
            <ul class="pagination">
                <li class="page-item previous @(!Model.HasPreviousPage ? "disabled" : "")">
                    <a href="javascript:;" onclick="loadPage(@(Model.PageNumber - 1))" class="page-link">
                        <i class="previous"></i>
                    </a>
                </li>

                @for (var i = 1; i <= Model.TotalPages; i++)
                {
                    <li class="page-item @(i == Model.PageNumber ? "active" : "")">
                        <a href="javascript:;" onclick="loadPage(@i)" class="page-link">@i</a>
                    </li>
                }

                <li class="page-item next @(!Model.HasNextPage ? "disabled" : "")">
                    <a href="javascript:;" onclick="loadPage(@(Model.PageNumber + 1))" class="page-link">
                        <i class="next"></i>
                    </a>
                </li>
            </ul>
        </div>
    </div>
</div>

