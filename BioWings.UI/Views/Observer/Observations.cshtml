        // Yardımcı fonksiyonlar
        function fillDetailField(fieldId, value) {
            const element = document.getElementById(fieldId);
            if (element) {
                // Eğer değer HTML içeriyorsa innerHTML kullan, aksi halde textContent kullan
                if (typeof value === 'string' && value.includes('&lt;br&gt;')) {
                    element.innerHTML = value.replace(/&lt;br&gt;/g, '<br>') || '-';
                } else if (typeof value === 'string' && value.includes('<br>')) {
                    element.innerHTML = value || '-';
                } else {
                    element.textContent = value || '-';
                }
            }
        }

        function showError(title, message) {
            Swal.fire({
                title: title,
                text: message,
                icon: 'error',
                confirmButtonText: 'Tamam',
