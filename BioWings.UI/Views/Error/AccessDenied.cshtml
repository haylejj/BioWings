@{
    ViewData["Title"] = ViewBag.Title ?? "Erişim Engellendi";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-lg-8 col-md-10">
            <div class="card border-danger">
                <div class="card-header bg-danger text-white">
                    <h1 class="card-title mb-0">
                        <i class="fas fa-ban me-2"></i>
                        @ViewData["Title"]
                    </h1>
                </div>
                <div class="card-body">
                    <div class="text-center mb-4">
                        <div class="display-1 text-danger mb-3">
                            <i class="fas fa-lock"></i>
                        </div>
                        <h3 class="text-danger">403 - Forbidden</h3>
                    </div>
                    
                    <div class="alert alert-danger" role="alert">
                        <h4 class="alert-heading">
                            <i class="fas fa-exclamation-triangle me-2"></i>
                            Erişim Reddedildi
                        </h4>
                        <p class="mb-0">@(ViewBag.Message ?? "Bu sayfaya erişim yetkiniz bulunmamaktadır.")</p>
                    </div>

                    <div class="row mt-4">
                        <div class="col-md-6 mb-3">
                            <div class="card border-light">
                                <div class="card-body">
                                    <h5 class="card-title">
                                        <i class="fas fa-info-circle text-info me-2"></i>
                                        Ne Yapabilirsiniz?
                                    </h5>
                                    <ul class="list-unstyled mb-0">
                                        <li><i class="fas fa-check text-success me-2"></i>Sistem yöneticisine başvurun</li>
                                        <li><i class="fas fa-check text-success me-2"></i>Farklı bir hesapla giriş yapın</li>
                                        <li><i class="fas fa-check text-success me-2"></i>Yetkili sayfalardan devam edin</li>
                                    </ul>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-6 mb-3">
                            <div class="card border-light">
                                <div class="card-body">
                                    <h5 class="card-title">
                                        <i class="fas fa-question-circle text-warning me-2"></i>
                                        Yardım Gerekli mi?
                                    </h5>
                                    <p class="mb-2">Eğer bu sayfaya erişmeniz gerektiğini düşünüyorsanız:</p>
                                    <p class="mb-0">
                                        <small class="text-muted">
                                            <i class="fas fa-envelope me-1"></i>
                                            destek@biowings.com
                                        </small>
                                    </p>
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="text-center mt-4">
                        <div class="btn-group" role="group">
                            @if (!string.IsNullOrEmpty(ViewBag.ReturnUrl))
                            {
                                <a href="@ViewBag.ReturnUrl" class="btn btn-outline-secondary">
                                    <i class="fas fa-arrow-left me-2"></i>
                                    Geri Dön
                                </a>
                            }
                            <a asp-controller="Home" asp-action="Index" class="btn btn-primary">
                                <i class="fas fa-home me-2"></i>
                                Ana Sayfa
                            </a>
                            <a asp-controller="Login" asp-action="Index" class="btn btn-outline-primary">
                                <i class="fas fa-sign-in-alt me-2"></i>
                                Giriş Yap
                            </a>
                        </div>
                    </div>
                </div>
                <div class="card-footer text-muted text-center">
                    <small>
                        <i class="fas fa-clock me-1"></i>
                        @DateTime.Now.ToString("dd/MM/yyyy HH:mm")
                    </small>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        // Geri dön butonunu tarayıcı geçmişi ile de kullan
        function goBack() {
            if (document.referrer && document.referrer !== window.location.href) {
                window.history.back();
            } else {
                window.location.href = '@Url.Action("Index", "Home")';
            }
        }
    </script>
} 