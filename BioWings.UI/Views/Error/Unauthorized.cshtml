@{
    ViewData["Title"] = ViewBag.Title ?? "Yetkisiz Erişim";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-lg-8 col-md-10">
            <div class="card border-warning">
                <div class="card-header bg-warning text-dark">
                    <h1 class="card-title mb-0">
                        <i class="fas fa-shield-alt me-2"></i>
                        @ViewData["Title"]
                    </h1>
                </div>
                <div class="card-body">
                    <div class="text-center mb-4">
                        <div class="display-1 text-warning mb-3">
                            <i class="fas fa-user-slash"></i>
                        </div>
                        <h3 class="text-warning">401 - Unauthorized</h3>
                    </div>
                    
                    <div class="alert alert-warning" role="alert">
                        <h4 class="alert-heading">
                            <i class="fas fa-exclamation-triangle me-2"></i>
                            Kimlik Doğrulama Gerekli
                        </h4>
                        <p class="mb-0">@(ViewBag.Message ?? "Bu işlemi gerçekleştirmek için yetkiniz bulunmamaktadır.")</p>
                    </div>

                    <div class="row mt-4">
                        <div class="col-md-6 mb-3">
                            <div class="card border-light">
                                <div class="card-body">
                                    <h5 class="card-title">
                                        <i class="fas fa-key text-primary me-2"></i>
                                        Giriş Gerekli
                                    </h5>
                                    <p class="mb-3">Bu sayfaya erişmek için giriş yapmanız gerekmektedir.</p>
                                    <a asp-controller="Login" asp-action="Login" class="btn btn-primary">
                                        <i class="fas fa-sign-in-alt me-2"></i>
                                        Giriş Yap
                                    </a>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-6 mb-3">
                            <div class="card border-light">
                                <div class="card-body">
                                    <h5 class="card-title">
                                        <i class="fas fa-user-plus text-success me-2"></i>
                                        Hesabınız Yok mu?
                                    </h5>
                                    <p class="mb-3">Hemen ücretsiz hesap oluşturun ve tüm özelliklere erişin.</p>
                                    <a asp-controller="SignUp" asp-action="Index" class="btn btn-success">
                                        <i class="fas fa-user-plus me-2"></i>
                                        Kayıt Ol
                                    </a>
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="text-center mt-4">
                        <div class="btn-group" role="group">
                            <button onclick="goBack()" class="btn btn-outline-secondary">
                                <i class="fas fa-arrow-left me-2"></i>
                                Geri Dön
                            </button>
                            <a asp-controller="Home" asp-action="Index" class="btn btn-outline-primary">
                                <i class="fas fa-home me-2"></i>
                                Ana Sayfa
                            </a>
                        </div>
                    </div>
                </div>
                <div class="card-footer text-muted text-center">
                    <small>
                        <i class="fas fa-clock me-1"></i>
                        @DateTime.Now.ToString("dd/MM/yyyy HH:mm")
                    </small>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        function goBack() {
            if (document.referrer && document.referrer !== window.location.href) {
                window.history.back();
            } else {
                window.location.href = '@Url.Action("Index", "Home")';
            }
        }
    </script>
} 