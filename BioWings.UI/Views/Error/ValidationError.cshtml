@{
    ViewData["Title"] = ViewBag.Title ?? "Doğrulama Hatası";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-lg-8 col-md-10">
            <div class="card border-warning">
                <div class="card-header bg-warning text-dark">
                    <h1 class="card-title mb-0">
                        <i class="fas fa-exclamation-triangle me-2"></i>
                        @ViewData["Title"]
                    </h1>
                </div>
                <div class="card-body">
                    <div class="text-center mb-4">
                        <div class="display-1 text-warning mb-3">
                            <i class="fas fa-clipboard-check"></i>
                        </div>
                        <h3 class="text-warning">400 - Validation Error</h3>
                    </div>
                    
                    <div class="alert alert-warning" role="alert">
                        <h4 class="alert-heading">
                            <i class="fas fa-exclamation-triangle me-2"></i>
                            Doğrulama Hatası
                        </h4>
                        <p class="mb-0">@(ViewBag.Message ?? "Gönderdiğiniz veriler geçersiz. Lütfen bilgilerinizi kontrol edin.")</p>
                    </div>

                    <div class="row mt-4">
                        <div class="col-md-6 mb-3">
                            <div class="card border-light">
                                <div class="card-body">
                                    <h5 class="card-title">
                                        <i class="fas fa-lightbulb text-warning me-2"></i>
                                        Öneriler
                                    </h5>
                                    <ul class="list-unstyled mb-0">
                                        <li><i class="fas fa-check text-success me-2"></i>Zorunlu alanları doldurun</li>
                                        <li><i class="fas fa-check text-success me-2"></i>E-posta formatını kontrol edin</li>
                                        <li><i class="fas fa-check text-success me-2"></i>Tarih formatlarını doğrulayın</li>
                                        <li><i class="fas fa-check text-success me-2"></i>Karakter limitlerini kontrol edin</li>
                                    </ul>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-6 mb-3">
                            <div class="card border-light">
                                <div class="card-body">
                                    <h5 class="card-title">
                                        <i class="fas fa-info-circle text-info me-2"></i>
                                        Yaygın Hatalar
                                    </h5>
                                    <ul class="list-unstyled mb-0">
                                        <li><small><i class="fas fa-dot-circle text-muted me-2"></i>Geçersiz e-posta adresi</small></li>
                                        <li><small><i class="fas fa-dot-circle text-muted me-2"></i>Çok kısa/uzun metin</small></li>
                                        <li><small><i class="fas fa-dot-circle text-muted me-2"></i>Geçersiz tarih formatı</small></li>
                                        <li><small><i class="fas fa-dot-circle text-muted me-2"></i>Eksik zorunlu alan</small></li>
                                    </ul>
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="text-center mt-4">
                        <div class="btn-group" role="group">
                            <button onclick="goBack()" class="btn btn-outline-secondary">
                                <i class="fas fa-arrow-left me-2"></i>
                                Geri Dön
                            </button>
                            <a asp-controller="Home" asp-action="Index" class="btn btn-primary">
                                <i class="fas fa-home me-2"></i>
                                Ana Sayfa
                            </a>
                            <button onclick="location.reload()" class="btn btn-outline-warning">
                                <i class="fas fa-redo me-2"></i>
                                Tekrar Dene
                            </button>
                        </div>
                    </div>
                </div>
                <div class="card-footer text-muted text-center">
                    <small>
                        <i class="fas fa-clock me-1"></i>
                        @DateTime.Now.ToString("dd/MM/yyyy HH:mm")
                    </small>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        function goBack() {
            if (document.referrer && document.referrer !== window.location.href) {
                window.history.back();
            } else {
                window.location.href = '@Url.Action("Index", "Home")';
            }
        }
    </script>
} 