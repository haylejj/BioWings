@{
    ViewData["Title"] = ViewBag.Title ?? "Sayfa Bulunamadı";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-lg-8 col-md-10">
            <div class="card border-warning">
                <div class="card-header bg-warning text-dark">
                    <h1 class="card-title mb-0">
                        <i class="fas fa-search me-2"></i>
                        @ViewData["Title"]
                    </h1>
                </div>
                <div class="card-body">
                    <div class="text-center mb-4">
                        <div class="display-1 text-warning mb-3">
                            <i class="fas fa-question-circle"></i>
                        </div>
                        <h3 class="text-warning">404 - Not Found</h3>
                    </div>
                    
                    <div class="alert alert-warning" role="alert">
                        <h4 class="alert-heading">
                            <i class="fas fa-exclamation-triangle me-2"></i>
                            Sayfa Bulunamadı
                        </h4>
                        <p class="mb-0">@(ViewBag.Message ?? "Aradığınız sayfa bulunamadı veya taşınmış olabilir.")</p>
                        @if (!string.IsNullOrEmpty(ViewBag.RequestedPath))
                        {
                            <hr>
                            <small class="text-muted">
                                <strong>İstenen sayfa:</strong> @ViewBag.RequestedPath
                            </small>
                        }
                    </div>

                    <div class="row mt-4">
                        <div class="col-md-6 mb-3">
                            <div class="card border-light">
                                <div class="card-body">
                                    <h5 class="card-title">
                                        <i class="fas fa-lightbulb text-warning me-2"></i>
                                        Öneriler
                                    </h5>
                                    <ul class="list-unstyled mb-0">
                                        <li><i class="fas fa-check text-success me-2"></i>URL'yi kontrol edin</li>
                                        <li><i class="fas fa-check text-success me-2"></i>Ana sayfadan tekrar deneyin</li>
                                        <li><i class="fas fa-check text-success me-2"></i>Arama çubuğunu kullanın</li>
                                        <li><i class="fas fa-check text-success me-2"></i>Menüden gezinin</li>
                                    </ul>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-6 mb-3">
                            <div class="card border-light">
                                <div class="card-body">
                                    <h5 class="card-title">
                                        <i class="fas fa-compass text-info me-2"></i>
                                        Hızlı Erişim
                                    </h5>
                                    <div class="d-grid gap-2">
                                        <a asp-controller="Home" asp-action="Index" class="btn btn-outline-primary btn-sm">
                                            <i class="fas fa-home me-2"></i>Ana Sayfa
                                        </a>
                                        <a asp-controller="Species" asp-action="Index" class="btn btn-outline-info btn-sm">
                                            <i class="fas fa-leaf me-2"></i>Türler
                                        </a>
                                        <a asp-controller="Observation" asp-action="Index" class="btn btn-outline-success btn-sm">
                                            <i class="fas fa-binoculars me-2"></i>Gözlemler
                                        </a>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="text-center mt-4">
                        <div class="btn-group" role="group">
                            <button onclick="goBack()" class="btn btn-outline-secondary">
                                <i class="fas fa-arrow-left me-2"></i>
                                Geri Dön
                            </button>
                            <a asp-controller="Home" asp-action="Index" class="btn btn-primary">
                                <i class="fas fa-home me-2"></i>
                                Ana Sayfa
                            </a>
                            <button onclick="location.reload()" class="btn btn-outline-warning">
                                <i class="fas fa-redo me-2"></i>
                                Yenile
                            </button>
                        </div>
                    </div>
                </div>
                <div class="card-footer text-muted text-center">
                    <small>
                        <i class="fas fa-clock me-1"></i>
                        @DateTime.Now.ToString("dd/MM/yyyy HH:mm")
                    </small>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        function goBack() {
            if (document.referrer && document.referrer !== window.location.href) {
                window.history.back();
            } else {
                window.location.href = '@Url.Action("Index", "Home")';
            }
        }
    </script>
} 