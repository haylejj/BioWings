@{
    ViewData["Title"] = ViewBag.Title ?? "Sunucu Hatası";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-lg-8 col-md-10">
            <div class="card border-danger">
                <div class="card-header bg-danger text-white">
                    <h1 class="card-title mb-0">
                        <i class="fas fa-server me-2"></i>
                        @ViewData["Title"]
                    </h1>
                </div>
                <div class="card-body">
                    <div class="text-center mb-4">
                        <div class="display-1 text-danger mb-3">
                            <i class="fas fa-exclamation-triangle"></i>
                        </div>
                        <h3 class="text-danger">500 - Internal Server Error</h3>
                    </div>
                    
                    <div class="alert alert-danger" role="alert">
                        <h4 class="alert-heading">
                            <i class="fas fa-bug me-2"></i>
                            Sunucu Hatası
                        </h4>
                        <p class="mb-0">@(ViewBag.Message ?? "Beklenmeyen bir hata oluştu. Lütfen daha sonra tekrar deneyin.")</p>
                    </div>

                    <div class="row mt-4">
                        <div class="col-md-6 mb-3">
                            <div class="card border-light">
                                <div class="card-body">
                                    <h5 class="card-title">
                                        <i class="fas fa-tools text-primary me-2"></i>
                                        Ne Yapabilirsiniz?
                                    </h5>
                                    <ul class="list-unstyled mb-0">
                                        <li><i class="fas fa-check text-success me-2"></i>Sayfayı yenileyin</li>
                                        <li><i class="fas fa-check text-success me-2"></i>Birkaç dakika bekleyip tekrar deneyin</li>
                                        <li><i class="fas fa-check text-success me-2"></i>Ana sayfaya dönün</li>
                                        <li><i class="fas fa-check text-success me-2"></i>Farklı bir işlem deneyin</li>
                                    </ul>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-6 mb-3">
                            <div class="card border-light">
                                <div class="card-body">
                                    <h5 class="card-title">
                                        <i class="fas fa-phone text-warning me-2"></i>
                                        Destek Gerekli mi?
                                    </h5>
                                    <p class="mb-2">Hata devam ediyorsa bizimle iletişime geçin:</p>
                                    <div class="small">
                                        <p class="mb-1">
                                            <i class="fas fa-envelope me-1"></i>
                                            <strong>E-posta:</strong> destek@biowings.com
                                        </p>
                                        <p class="mb-1">
                                            <i class="fas fa-clock me-1"></i>
                                            <strong>Çalışma Saatleri:</strong> 09:00 - 18:00
                                        </p>
                                        <p class="mb-0">
                                            <i class="fas fa-calendar me-1"></i>
                                            <strong>Hafta içi:</strong> Pazartesi - Cuma
                                        </p>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="alert alert-info mt-4" role="alert">
                        <h6 class="alert-heading">
                            <i class="fas fa-info-circle me-2"></i>
                            Geliştirici Bilgisi
                        </h6>
                        <p class="mb-2">Bu hata otomatik olarak sistem yöneticilerine bildirilmiştir.</p>
                        <small class="text-muted">
                            Hata Kodu: #ERR500-@DateTime.Now.ToString("yyyyMMdd-HHmmss")
                        </small>
                    </div>

                    <div class="text-center mt-4">
                        <div class="btn-group" role="group">
                            <button onclick="location.reload()" class="btn btn-warning">
                                <i class="fas fa-redo me-2"></i>
                                Sayfayı Yenile
                            </button>
                            <button onclick="goBack()" class="btn btn-outline-secondary">
                                <i class="fas fa-arrow-left me-2"></i>
                                Geri Dön
                            </button>
                            <a asp-controller="Home" asp-action="Index" class="btn btn-primary">
                                <i class="fas fa-home me-2"></i>
                                Ana Sayfa
                            </a>
                        </div>
                    </div>
                </div>
                <div class="card-footer text-muted text-center">
                    <small>
                        <i class="fas fa-clock me-1"></i>
                        @DateTime.Now.ToString("dd/MM/yyyy HH:mm")
                    </small>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        function goBack() {
            if (document.referrer && document.referrer !== window.location.href) {
                window.history.back();
            } else {
                window.location.href = '@Url.Action("Index", "Home")';
            }
        }

        // 30 saniye sonra otomatik olarak ana sayfaya yönlendir
        setTimeout(function() {
            if (confirm('Bu sayfada 30 saniyedir bulunuyorsunuz. Ana sayfaya yönlendirilmek ister misiniz?')) {
                window.location.href = '@Url.Action("Index", "Home")';
            }
        }, 30000);
    </script>
} 