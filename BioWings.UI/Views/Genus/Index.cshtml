@model ApiPaginatedListResult<GenusGetViewModel>
@{
    ViewData["Title"] = "Genus";
    Layout = "~/Views/MainLayout/Index.cshtml";
}

<div class="card">
    <div class="card-header border-0 pt-6">
        <div class="card-title">
            <div class="d-flex align-items-center position-relative my-1">
                <span class="svg-icon svg-icon-1 position-absolute ms-6">
                    <svg width="24" height="24" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
                        <rect opacity="0.5" x="17.0365" y="15.1223" width="8.15546" height="2" rx="1" transform="rotate(45 17.0365 15.1223)" fill="currentColor"></rect>
                        <path d="M11 19C6.55556 19 3 15.4444 3 11C3 6.55556 6.55556 3 11 3C15.4444 3 19 6.55556 19 11C19 15.4444 15.4444 19 11 19ZM11 5C7.53333 5 5 7.53333 5 11C5 14.4667 7.53333 17 11 17C14.4667 17 17 14.4667 17 11C17 7.53333 14.4667 5 11 5Z" fill="currentColor"></path>
                    </svg>
                </span>
                <input type="text" id="searchInput" class="form-control form-control-solid w-250px ps-14" placeholder="Search Genus">
            </div>
        </div>
        <div class="card-toolbar">
            <div class="d-flex justify-content-end">
                <button type="button" class="btn btn-light-dark" data-bs-toggle="modal" data-bs-target="#kt_createmodal_genus">
                    <span class="svg-icon svg-icon-2">
                        <svg width="24" height="24" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
                            <rect opacity="0.5" x="11.364" y="20.364" width="16" height="2" rx="1" transform="rotate(-90 11.364 20.364)" fill="currentColor"></rect>
                            <rect x="4.36396" y="11.364" width="16" height="2" rx="1" fill="currentColor"></rect>
                        </svg>
                    </span>
                    New Genus
                </button>
            </div>
        </div>
    </div>
    <div class="card-body py-4">
        <table class="table align-middle table-row-dashed fs-6 gy-5" id="genusTable">
            <thead>
                <tr class="text-start text-gray-400 fw-bold fs-7 text-uppercase gs-0">
                    <th>Id</th>
                    <th>Genus Name</th>
                    <th>Family Name</th>
                    <th></th>
                </tr>
            </thead>
            <tbody class="text-gray-600 fw-semibold">
                @foreach (var item in Model.Items)
                {
                    <tr>
                        <td>@item.Id</td>
                        <td>@(item.GenusName ?? "-")</td>
                        <td>@(item.FamilyName ?? "-")</td>
                        <td>
                            <div class="d-flex justify-content-center">
                                <a href="javascript:;" onclick="confirmDelete(@item.Id)"
                                   class="btn btn-icon btn-bg-light btn-active-color-danger btn-sm me-2">
                                    <i class="fas fa-trash text-danger"></i>
                                </a>
                                <a href="javascript:;" onclick="updateGenus(@item.Id)"
                                   class="btn btn-icon btn-bg-light btn-active-color-primary btn-sm">
                                    <i class="fas fa-edit text-primary"></i>
                                </a>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
        <div class="d-flex flex-stack flex-wrap pt-10">
            <div class="fs-6 fw-semibold text-gray-700">
                @{
                    var startEntry = (Model.PageNumber - 1) * 25 + 1;
                    var endEntry = Math.Min(Model.PageNumber * 25, Model.TotalCount);
                    if (Model.TotalCount == 0)
                    {
                        startEntry = 0;
                        endEntry = 0;
                    }
                }
                Showing @startEntry to @endEntry of @Model.TotalCount entries
            </div>
            <ul class="pagination">
                @{
                    var maxVisiblePages = Math.Min(5, Model.TotalPages);
                    var currentPage = Model.PageNumber;
                    var totalPages = Model.TotalPages;

                    var halfVisible = Math.Floor((maxVisiblePages - 1) / 2.0);
                    var startPage = Math.Max(1, currentPage - (int)halfVisible);
                    var endPage = Math.Min(totalPages, startPage + maxVisiblePages - 1);

                    if (endPage - startPage + 1 < maxVisiblePages)
                    {
                        startPage = Math.Max(1, endPage - maxVisiblePages + 1);
                    }
                }

                <li class="page-item previous @(!Model.HasPreviousPage ? "disabled" : "")">
                    @if (Model.HasPreviousPage)
                    {
                        <a href="javascript:;" onclick="loadPage(@(Model.PageNumber - 1))" class="page-link">
                            <i class="previous"></i>
                        </a>
                    }
                    else
                    {
                        <span class="page-link"><i class="previous"></i></span>
                    }
                </li>

                @if (startPage > 1)
                {
                    <li class="page-item">
                        <a href="javascript:;" onclick="loadPage(1)" class="page-link">1</a>
                    </li>
                    @if (startPage > 2)
                    {
                        <li class="page-item disabled">
                            <span class="page-link">...</span>
                        </li>
                    }
                }

                @for (var i = startPage; i <= endPage; i++)
                {
                    <li class="page-item @(i == currentPage ? "active" : "")">
                        <a href="javascript:;" onclick="loadPage(@i)" class="page-link">@i</a>
                    </li>
                }

                @if (endPage < totalPages)
                {
                    @if (endPage < totalPages - 1)
                    {
                        <li class="page-item disabled">
                            <span class="page-link">...</span>
                        </li>
                    }
                    <li class="page-item">
                        <a href="javascript:;" onclick="loadPage(@totalPages)" class="page-link">@totalPages</a>
                    </li>
                }

                <li class="page-item next @(!Model.HasNextPage ? "disabled" : "")">
                    @if (Model.HasNextPage)
                    {
                        <a href="javascript:;" onclick="loadPage(@(Model.PageNumber + 1))" class="page-link">
                            <i class="next"></i>
                        </a>
                    }
                    else
                    {
                        <span class="page-link"><i class="next"></i></span>
                    }
                </li>
            </ul>
        </div>
    </div>
</div>

<!--begin::Create Modal-->
<div class="modal fade" id="kt_createmodal_genus" tabindex="-1" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content rounded">
            <div class="modal-header pb-0 border-0 justify-content-end">
                <div class="btn btn-sm btn-icon btn-active-color-primary" data-bs-dismiss="modal">
                    <i class="ki-duotone ki-cross fs-1">
                        <span class="path1"></span>
                        <span class="path2"></span>
                    </i>
                </div>
            </div>
            <div class="modal-body scroll-y px-10 px-lg-15 pt-0 pb-15">
                <div class="mb-13 text-center">
                    <h1 class="mb-3">Create Genus</h1>
                </div>
                <form id="create_genus_form">
                    <div class="d-flex flex-column mb-8">
                        <label class="fs-6 fw-semibold mb-2">Genus Name<span class="text-danger">*</span></label>
                        <input type="text" class="form-control" name="name" id="createName" required />
                    </div>
                    <div class="d-flex flex-column mb-8">
                        <label class="fs-6 fw-semibold mb-2">Family</label>
                        <div class="d-flex align-items-center">
                            <select class="form-select" name="familyId" id="createFamilyId">
                                <option value="">Select Family</option>
                            </select>
                            <a href="/Family/Index" class="btn btn-sm btn-light-primary ms-2" title="Add New Family">
                                <i class="fas fa-plus"></i>
                            </a>
                        </div>
                        <div class="text-muted mt-2">
                            <small><i class="fas fa-info-circle"></i> If the family you're looking for is not listed, you can add it from the Family page.</small>
                        </div>
                    </div>
                    <div class="text-center">
                        <button type="button" class="btn btn-light-success" id="createGenusButton">
                            <span class="indicator-label">Create</span>
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
<!--begin::Update Modal-->
<div class="modal fade" id="kt_updatemodal_genus" tabindex="-1" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content rounded">
            <div class="modal-header pb-0 border-0 justify-content-end">
                <div class="btn btn-sm btn-icon btn-active-color-primary" data-bs-dismiss="modal">
                    <i class="ki-duotone ki-cross fs-1">
                        <span class="path1"></span>
                        <span class="path2"></span>
                    </i>
                </div>
            </div>
            <div class="modal-body scroll-y px-10 px-lg-15 pt-0 pb-15">
                <div class="mb-13 text-center">
                    <h1 class="mb-3">Update Genus</h1>
                </div>
                <form id="update_genus_form">
                    <input type="hidden" id="updateId" name="id" />
                    <div class="d-flex flex-column mb-8">
                        <label class="fs-6 fw-semibold mb-2">Name<span class="text-danger">*</span></label>
                        <input type="text" class="form-control" name="name" id="updateName" required />
                    </div>
                    <div class="d-flex flex-column mb-8">
                        <label class="fs-6 fw-semibold mb-2">Family</label>
                        <select class="form-select" name="familyId" id="updateFamilyId">
                            <option value="">Select Family</option>
                        </select>
                    </div>
                    <div class="text-center">
                        <button type="button" class="btn btn-light-success" id="updateGenusButton">
                            <span class="indicator-label">Update</span>
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="~/js/genus/genus-datatable.js"></script>
    <script src="~/js/genus/genus-search.js"></script>
    <script src="~/js/genus/genus-family-dropdown.js"></script>
    <script src="~/js/genus/genus-create.js"></script>
    <script src="~/js/genus/genus-update.js"></script>
    <script src="~/js/genus/genus-delete.js"></script>
    <script src="~/js/genus/genus-modals.js"></script>
}